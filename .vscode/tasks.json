{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build-project",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}\\src\\*.cpp",
        "${workspaceFolder}\\src\\core\\*.cpp",
        "-o",
        "${workspaceFolder}\\bin\\Application.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "detail": "compiler: g++"
    }
  ]
}
